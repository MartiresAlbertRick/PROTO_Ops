@model OPSCO_Web.Models.OSC_Team

@{
    ViewBag.Title = "Details";
}
<h3>Team</h3>
<div>
    <h4>Details</h4>
    <hr />
    <div class="row">
        <div class="col-md-12">
            <div class="btn-group">
                <a href="@Url.Action("Index", "Team", null)" class="btn btn-default btn-sm">
                    <i class="fa fa-chevron-left"></i> Back to List
                </a>
                <a href="@Url.Action("Settings", "Team", new { id = Model.TeamId} )" class="btn btn-default btn-sm">
                    <i class="fa fa-cog"></i> Team Settings
                </a>
                @if (ViewBag.CanEdit)
                {
                    <a href="@Url.Action("Edit", "Team", new { id = Model.TeamId })" class="btn btn-default btn-sm">
                        <i class="fa fa-edit"></i> Edit
                    </a>
                }
                else
                {
                    <a href="@Url.Action("Edit", "Team", new { id = Model.TeamId })" class="btn btn-default btn-sm disabled">
                        <i class="fa fa-edit"></i> Edit
                    </a>
                }
            </div>
        </div>
    </div>
    <br />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.TeamName)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.TeamName)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Department.DepartmentName)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Department.DepartmentName)
        </dd>
        @if (Session["role"].ToString() == "Admin")
        { 
            <dt>
                @Html.DisplayNameFor(model => model.IsActive)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.IsActive)
            </dd>
        }
    </dl>
</div>