                success: function (data) {
                    var arr = [];
                    $.each(data, function (index, item) {
                        var obj = {
                            value: item.TimeSpent,
                            label: item.Category,
                        };
                        arr.push(obj);
                    });
                    var chtCanvas = $('#pieChart1').get(0).getContext('2d');
