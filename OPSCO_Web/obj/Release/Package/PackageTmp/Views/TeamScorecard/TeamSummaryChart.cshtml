                    pointHighlightStroke: "rgba(220,220,220,1)",
                    data: []
                };
                $.each(data, function (index, item) {
                    prodBarChartData.labels.push(item.Label);
                    dt.data.push(item.Count);
                });
                var s = data.length;
                var max = 12 - s;
