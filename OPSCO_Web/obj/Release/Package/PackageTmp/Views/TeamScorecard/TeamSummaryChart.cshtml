                        segmentShowStroke: false,
                        animateRotate: true,
                        animateScale: true,
                        percentageInnerCutout: 60,
                        tooltipTemplate: "<%= label %> - <%= value %>",
                        legendTemplate: "<ul class=\"<%=name.toLowerCase()%>-legend\">" +
                        "<% for (var i=0; i<segments.length; i++){%><li>" +
