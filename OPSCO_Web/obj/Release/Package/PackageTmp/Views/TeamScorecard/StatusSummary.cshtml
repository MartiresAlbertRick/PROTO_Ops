<h4>Status Summary @ViewBag.Month-@ViewBag.Year</h4>
<div class="col-md-12 table-responsive">
    <table class="table coverbg table-striped table-bordered input-sm">
        <thead>
            <tr>
                <th>Worktype</th>
                <th>Status</th>
                <th>QC Parameter</th>
                <th>Completed Count</th>
                <th>Selected Count</th>
                <th>Reviewed Count</th>
                <th>Reviewed %</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in ViewBag.StatusSummary)
            {
            <tr>
                <td>@item.Worktype</td>
                <td>@item.Status</td>
                <td><input type="text" id="txt_@(item.Worktype + "_" + item.Status)" class="form-control input-sm" placeholder="User Experience Level" value="@item.QCParameter" /></td>
                <td>
                    @if (item.CompletedCount > 0)
                        { @item.CompletedCount }
                    else
                        { <text>N/A</text> }
                </td>
                <td>@item.SelectedCount</td>
                <td>@item.ReviewedCount</td>
                <td>@item.ReviewedPerc%</td>
            </tr>
            }
        </tbody>
    </table>
</div>
@Html.Action("StatusSummaryComment")