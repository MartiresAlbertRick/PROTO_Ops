<div class="row">
    <div class="col-md-12">
        <div class="bs-callout bs-callout-primary">
            <p>Manager's Comment</p>
            <textarea id="worktype_comment" rows="5" class="form-control input-sm" placeholder="Enter comment here...">@ViewBag.Comment</textarea>
            <br />
            <a class="btn btn-primary btn-sm" id="btn_save_worktype"><i class="fa fa-save"></i> Save</a>
        </div>
    </div>
</div>
<script>
    $(function () {
        $('#btn_save_worktype').click(function () { 
            $.ajax({
                url: '/TeamScorecard/SaveWorktypeSummaryComment/',
                data: '{ id : ' + @ViewBag.Id + ', comment : "' + $('#worktype_comment').val() + '"}',
                dataType: "json",
                type: 'POST',
                contentType: "application/json; charset=utf-8",
                success: function (data) {
                    alert(data.message);
                },
                error: function (response) {
                    alert(response.responseText);
                },
                failure: function (response) {
                    alert(response.responseText);
                }
            });
        });
    });
</script>