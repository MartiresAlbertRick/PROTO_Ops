<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Operations Scorecard</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar navbar-blue navbar-fixed-top">
        <div class="container-fluid">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Operations Scorecard", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <!--<ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Home", "Index", "Home")</li>
                    <li>@Html.ActionLink("API", "Index", "API")</li>
                </ul>-->
                <div class="nav navbar-text navbar-right">
                    <div class="container-fluid">
                        <i class="fa fa-user-circle"></i> @User.Identity.Name
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="container-fluid body-content">
        <div id="wrapper">
            <div id="sidebar-wrapper">
                <ul class="sidebar-nav" id="accordion">
                    <li>
                        <a class="menu-toggle" id="menu-toggle">
                            <i class="fa fa-navicon fa-lg"></i>
                        </a>
                    </li>
                    <li class="panel">
                        <a href="@Url.Action("Index", "Home", null)">
                            <i class="fa fa-pie-chart fa-lg"></i><span class="desc">Dashboard</span>
                        </a>
                        <div class="submenu collapse" id="dashboard">
                        </div>
                    </li>
                    <li class="panel">
                        <a data-toggle="collapse" href="#maintenance" data-parent="accordion">
                            <i class="fa fa-wrench fa-lg"></i><span class="desc">Maintenance</span>
                        </a>
                        <div class="submenu collapse" id="maintenance">
                            @Html.ActionLink("Department", "Index", "Department")
                            @Html.ActionLink("Team", "Index", "Team")
                            @Html.ActionLink("Representative", "Index", "Representative")
                            @Html.ActionLink("Manager", "Index", "Manager")
                            @Html.ActionLink("Activity Tracker", "Index", "ActivityTracker")
                            @Html.ActionLink("Manual Entry", "Index", "ManualEntry")
                        </div>
                    </li>
                    <li class="panel">
                        <a href="@Url.Action("Index", "Import", null)">
                            <i class="fa fa-upload fa-lg"></i><span class="desc">Import</span>
                        </a>
                        <div class="submenu collapse" id="import">
                        </div>
                    </li>
                    <li class="panel">
                        <a data-toggle="collapse" href="#scorecard" data-parent="accordion">
                            <i class="fa fa-bar-chart-o fa-lg"></i><span class="desc">Scorecard</span>
                        </a>
                        <div class="submenu collapse" id="scorecard">
                            @Html.ActionLink("Individual", "Index", "IndividualScorecard")
                            @Html.ActionLink("Team", "Index", "TeamScorecard")
                        </div>
                    </li>
                </ul>
            </div>
            <div id="page-content-wrapper">
                @RenderBody()
            </div>
        </div>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
    <script>
        var toggled = sessionStorage.getItem('toggled');
        if (toggled == 'true') {
            $('#wrapper').addClass('toggled');
        }

        $('#menu-toggle').click(function () {
            if ($('#wrapper').hasClass('toggled')) {
                $('#wrapper').removeClass('toggled');
                sessionStorage.setItem('toggled', 'false');
            }
            else {
                $('#wrapper').addClass('toggled');
                sessionStorage.setItem('toggled', 'true');
            }
        });
    </script>
</body>
</html>
