<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Operations Scorecard</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar navbar-blue navbar-fixed-top">
        <div class="container-fluid">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Operations Scorecard", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <!--<ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Home", "Index", "Home")</li>
                    <li>@Html.ActionLink("API", "Index", "API")</li>
                </ul>-->
                <div class="nav navbar-text navbar-right">
                    <div class="container-fluid">
                        <i class="fa fa-user-circle"></i> @Session["user_full_name"]
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="container-fluid body-content">
        <div id="wrapper">
            <div id="sidebar-wrapper">
                @Html.Partial("SideNav")
            </div>
            <div id="page-content-wrapper">
                @RenderBody()
            </div>
        </div>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
    <script>
        var toggled = sessionStorage.getItem('toggled');
        if (toggled == 'true') {
            $('#wrapper').addClass('toggled');
        }

        $('#menu-toggle').click(function () {
            if ($('#wrapper').hasClass('toggled')) {
                $('#wrapper').removeClass('toggled');
                sessionStorage.setItem('toggled', 'false');
            }
            else {
                $('#wrapper').addClass('toggled');
                sessionStorage.setItem('toggled', 'true');
            }
        });
    </script>
</body>
</html>
