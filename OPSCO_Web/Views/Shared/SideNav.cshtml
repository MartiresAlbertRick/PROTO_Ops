
<ul class="sidebar-nav" id="accordion">
    <li>
        <a class="menu-toggle" id="menu-toggle">
            <i class="fa fa-navicon fa-lg"></i>
        </a>
    </li>
    @if (Session["user_id"].ToString() != "")
    {
        <li class="panel">
            <a href="@Url.Action("Index", "Home", null)">
                <i class="fa fa-pie-chart fa-lg"></i><span class="desc">Dashboard</span>
            </a>
            <div class="submenu collapse" id="dashboard">
            </div>
        </li>
        if (Convert.ToBoolean(Session["Maintenance"]) == true || Session["role"].ToString() == "Admin")
        {
            <li class="panel">
                <a data-toggle="collapse" href="#maintenance" data-parent="accordion">
                    <i class="fa fa-wrench fa-lg"></i><span class="desc">Maintenance</span>
                </a>
                <div class="submenu collapse" id="maintenance">
                    @if (Convert.ToBoolean(Session["Department"]) == true || Session["role"].ToString() == "Admin")
                    {
                        @Html.ActionLink("Department", "Index", "Department")
                    }
                    @if (Convert.ToBoolean(Session["Team"]) == true || Session["role"].ToString() == "Admin")
                    {
                        @Html.ActionLink("Team", "Index", "Team")
                    }
                    @if (Convert.ToBoolean(Session["Representative"]) == true || Session["role"].ToString() == "Admin")
                    {
                        @Html.ActionLink("Representative", "Index", "Representative")
                    }
                    @if (Convert.ToBoolean(Session["Manager"]) == true || Session["role"].ToString() == "Admin")
                    {
                        @Html.ActionLink("Manager", "Index", "Manager")
                    }
                    @if (Convert.ToBoolean(Session["ActivityTracker"]) == true || Session["role"].ToString() == "Admin")
                    {
                        @Html.ActionLink("Activity Tracker", "Index", "ActivityTracker")
                    }
                    @if (Convert.ToBoolean(Session["NPTTracker"]) == true || Session["role"].ToString() == "Admin")
                    {
                        @Html.ActionLink("NPT Tracker", "Index", "NptTracker")
                    }
                    @if (Convert.ToBoolean(Session["ManualEntry"]) == true || Session["role"].ToString() == "Admin")
                    {
                        @Html.ActionLink("Manual Entry", "Index", "ManualEntry")
                    }
                </div>
            </li>
        }
        if (Convert.ToBoolean(Session["Import"]) == true || Session["role"].ToString() == "Admin")
        {
            <li class="panel">
                <a href="@Url.Action("Index", "Import", null)">
                    <i class="fa fa-upload fa-lg"></i><span class="desc">Import</span>
                </a>
                <div class="submenu collapse" id="import">
                </div>
            </li>
        }
        if (Convert.ToBoolean(Session["Scorecard"]) == true || Session["role"].ToString() == "Admin")
        {
            <li class="panel">
                <a data-toggle="collapse" href="#scorecard" data-parent="accordion">
                    <i class="fa fa-bar-chart-o fa-lg"></i><span class="desc">Scorecard</span>
                </a>
                <div class="submenu collapse" id="scorecard">
                    @if (Convert.ToBoolean(Session["IndividualScorecard"]) == true || Session["role"].ToString() == "Admin")
                    {
                        @Html.ActionLink("Individual", "Index", "IndividualScorecard")
                    }
                    @if (Convert.ToBoolean(Session["TeamScorecard"]) == true || Session["role"].ToString() == "Admin")
                    {
                        @Html.ActionLink("Team", "Index", "TeamScorecard")
                    }
                </div>
            </li>
        }
    }
</ul>
